<%- include('partials/header', { title: 'Error - WeEat' }) %>

<div class="error-page">
  <div class="error-header">
    <h1>‚ùå <%= error || 'An Error Occurred' %></h1>
    <p class="error-subtitle">Something went wrong while processing your request</p>
  </div>
  
  <!-- Error Details Section -->
  <% if (typeof details !== 'undefined' && details) { %>
    <div class="error-section">
      <h3>üîç Error Details</h3>
      <div class="error-content">
        <p><%= details %></p>
      </div>
    </div>
  <% } %>
  
  <!-- Error Message Section -->
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="error-section">
      <h3>üí¨ Message</h3>
      <div class="error-content">
        <p><%= message %></p>
      </div>
    </div>
  <% } %>
  
  <!-- SQL Error Section (VULNERABILITY: Information Disclosure) -->
  <% if (typeof sql !== 'undefined' && sql) { %>
    <div class="error-section sql-error">
      <h3>üóÑÔ∏è Database Query</h3>
      <div class="error-content">
        <pre><%= sql %></pre>
      </div>
    </div>
  <% } %>
  
  <!-- Stack Trace Section (VULNERABILITY: Debug Information Exposure) -->
  <% if (typeof stack !== 'undefined' && stack) { %>
    <div class="error-section">
      <details class="stack-trace">
        <summary>üêõ Technical Details (Stack Trace)</summary>
        <pre class="stack-content"><%= stack %></pre>
      </details>
    </div>
  <% } %>
  
  <!-- System Information (VULNERABILITY: Environment Disclosure) -->
  <% if (process.env.NODE_ENV === 'development') { %>
    <div class="error-section system-info">
      <details>
        <summary>üñ•Ô∏è System Information (Development Mode)</summary>
        <div class="system-details">
          <h4>Environment Details:</h4>
          <ul>
            <li><strong>Node.js Version:</strong> <%= process.version %></li>
            <li><strong>Platform:</strong> <%= process.platform %></li>
            <li><strong>Architecture:</strong> <%= process.arch %></li>
            <li><strong>Working Directory:</strong> <%= process.cwd() %></li>
            <li><strong>Memory Usage:</strong> <%= Math.round(process.memoryUsage().used / 1024 / 1024) %>MB</li>
          </ul>
          
          <h4>Database Configuration:</h4>
          <ul>
            <li><strong>Host:</strong> <%= process.env.DB_HOST || 'localhost' %></li>
            <li><strong>Port:</strong> <%= process.env.DB_PORT || '5432' %></li>
            <li><strong>Database:</strong> <%= process.env.DB_NAME || 'weeatdb' %></li>
            <li><strong>User:</strong> <%= process.env.DB_USER || 'weeatuser' %></li>
          </ul>
        </div>
      </details>
    </div>
  <% } %>
  
  <!-- Request Information (VULNERABILITY: Request Data Exposure) -->
  <% if (typeof req !== 'undefined') { %>
    <div class="error-section">
      <details>
        <summary>üì® Request Information</summary>
        <div class="request-details">
          <h4>Request Details:</h4>
          <ul>
            <li><strong>Method:</strong> <%= req.method || 'Unknown' %></li>
            <li><strong>URL:</strong> <%= req.url || 'Unknown' %></li>
            <li><strong>User Agent:</strong> <%= req.get ? req.get('User-Agent') : 'Unknown' %></li>
            <li><strong>IP Address:</strong> <%= req.ip || 'Unknown' %></li>
          </ul>
          
          <% if (req.session && req.session.user) { %>
            <h4>Session Information:</h4>
            <ul>
              <li><strong>User ID:</strong> <%= req.session.user.id %></li>
              <li><strong>Username:</strong> <%= req.session.user.username %></li>
              <li><strong>Role:</strong> <%= req.session.user.role %></li>
              <li><strong>Session ID:</strong> <%= req.sessionID || 'Unknown' %></li>
            </ul>
          <% } %>
        </div>
      </details>
    </div>
  <% } %>
  
  <!-- Navigation Actions -->
  <div class="error-actions">
    <div class="action-buttons">
      <a href="/" class="btn btn-primary">
        <span class="btn-icon">üè†</span>
        <span class="btn-text">Go Home</span>
      </a>
      
      <a href="javascript:history.back()" class="btn btn-secondary">
        <span class="btn-icon">‚¨ÖÔ∏è</span>
        <span class="btn-text">Go Back</span>
      </a>
      
      <a href="/contact" class="btn btn-tertiary">
        <span class="btn-icon">üìß</span>
        <span class="btn-text">Report Issue</span>
      </a>
    </div>
    
    <div class="error-help">
      <p>If this error persists, please contact our support team with the error details above.</p>
    </div>
  </div>
  
  <!-- Debug Console (VULNERABILITY: Client-Side Debug Info) -->
  <div class="debug-console">
    <details>
      <summary>üîß Debug Console</summary>
      <div id="debug-output">
        <p>Error logged to console. Check browser developer tools for more information.</p>
      </div>
    </details>
  </div>
</div>

<style>
.error-page {
  max-width: 900px;
  margin: 40px auto;
  padding: 30px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.error-header {
  text-align: center;
  margin-bottom: 40px;
  padding: 30px;
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: white;
  border-radius: 12px;
  box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
}

.error-header h1 {
  margin: 0 0 10px 0;
  font-size: 2.5em;
  font-weight: 700;
}

.error-subtitle {
  margin: 0;
  font-size: 1.1em;
  opacity: 0.9;
}

.error-section {
  margin: 25px 0;
  padding: 20px;
  background: #f8f9fa;
  border-left: 4px solid #dc3545;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.error-section h3 {
  margin: 0 0 15px 0;
  color: #dc3545;
  font-size: 1.2em;
  font-weight: 600;
}

.error-content {
  background: white;
  padding: 15px;
  border-radius: 6px;
  border: 1px solid #e9ecef;
}

.error-content p {
  margin: 0;
  line-height: 1.6;
  color: #495057;
}

.sql-error {
  border-left-color: #fd7e14;
}

.sql-error h3 {
  color: #fd7e14;
}

.sql-error pre {
  background: #2d3748;
  color: #e2e8f0;
  padding: 15px;
  border-radius: 6px;
  overflow-x: auto;
  font-family: 'Monaco', 'Consolas', monospace;
  font-size: 13px;
  line-height: 1.4;
}

.stack-trace {
  cursor: pointer;
  user-select: none;
}

.stack-trace summary {
  padding: 10px;
  background: #fff3cd;
  border: 1px solid #ffeaa7;
  border-radius: 6px;
  font-weight: 600;
  color: #856404;
}

.stack-trace summary:hover {
  background: #fff0b8;
}

.stack-content {
  background: #2d3748;
  color: #e2e8f0;
  padding: 20px;
  border-radius: 6px;
  overflow-x: auto;
  font-family: 'Monaco', 'Consolas', monospace;
  font-size: 12px;
  line-height: 1.5;
  margin: 15px 0 0 0;
  max-height: 400px;
  overflow-y: auto;
}

.system-info {
  border-left-color: #17a2b8;
}

.system-info h3 {
  color: #17a2b8;
}

.system-details, .request-details {
  background: white;
  padding: 15px;
  border-radius: 6px;
}

.system-details ul, .request-details ul {
  list-style: none;
  padding: 0;
  margin: 10px 0;
}

.system-details li, .request-details li {
  padding: 8px 0;
  border-bottom: 1px solid #e9ecef;
  display: flex;
  justify-content: space-between;
}

.system-details li:last-child, .request-details li:last-child {
  border-bottom: none;
}

.system-details h4, .request-details h4 {
  margin: 20px 0 10px 0;
  color: #495057;
  font-size: 1.1em;
  border-bottom: 2px solid #e9ecef;
  padding-bottom: 5px;
}

.error-actions {
  margin-top: 40px;
  text-align: center;
}

.action-buttons {
  display: flex;
  gap: 15px;
  justify-content: center;
  margin-bottom: 25px;
  flex-wrap: wrap;
}

.btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 24px;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.2s ease;
  border: 2px solid transparent;
}

.btn-primary {
  background: var(--accent-yellow, #F77F00);
  color: white;
}

.btn-primary:hover {
  background: var(--primary-red, #D62828);
  transform: translateY(-2px);
}

.btn-secondary {
  background: #6c757d;
  color: white;
}

.btn-secondary:hover {
  background: #5a6268;
  transform: translateY(-2px);
}

.btn-tertiary {
  background: white;
  color: #6c757d;
  border-color: #6c757d;
}

.btn-tertiary:hover {
  background: #6c757d;
  color: white;
}

.btn-icon {
  font-size: 1.1em;
}

.error-help {
  padding: 20px;
  background: #e7f3ff;
  border: 1px solid #b8daff;
  border-radius: 8px;
  color: #0c63e4;
  margin-top: 20px;
}

.error-help p {
  margin: 0;
  font-style: italic;
}

.debug-console {
  margin-top: 30px;
  padding: 15px;
  background: #f1f3f4;
  border-radius: 8px;
}

.debug-console summary {
  cursor: pointer;
  font-weight: 600;
  color: #5f6368;
  padding: 10px;
}

#debug-output {
  background: #2d3748;
  color: #e2e8f0;
  padding: 15px;
  border-radius: 6px;
  margin-top: 10px;
  font-family: monospace;
  font-size: 12px;
}

@media (max-width: 768px) {
  .error-page {
    margin: 20px;
    padding: 20px;
  }
  
  .error-header h1 {
    font-size: 2em;
  }
  
  .action-buttons {
    flex-direction: column;
    align-items: stretch;
  }
  
  .btn {
    justify-content: center;
  }
}
</style>

<script>
// VULNERABILITY: Log sensitive error information to console
console.group('üêõ WeEat Error Debug Information');
console.log('Error Details:', {
  error: '<%= error || "Unknown" %>',
  timestamp: new Date().toISOString(),
  <% if (typeof details !== 'undefined' && details) { %>
  details: '<%= details.replace(/'/g, "\\'") %>',
  <% } %>
  <% if (typeof stack !== 'undefined' && stack) { %>
  stackTrace: '<%= stack.replace(/\n/g, "\\n").replace(/'/g, "\\'") %>',
  <% } %>
  userAgent: navigator.userAgent,
  currentUrl: window.location.href,
  referrer: document.referrer
});

<% if (typeof req !== 'undefined' && req.session && req.session.user) { %>
console.log('Session Information:', {
  userId: '<%= req.session.user.id %>',
  username: '<%= req.session.user.username %>',
  role: '<%= req.session.user.role %>',
  sessionId: '<%= req.sessionID || "unknown" %>'
});
<% } %>

console.groupEnd();

// VULNERABILITY: Expose error reporting endpoint
window.errorData = {
  <% if (typeof error !== 'undefined') { %>error: '<%= error %>',<% } %>
  <% if (typeof details !== 'undefined') { %>details: '<%= details %>',<% } %>
  <% if (typeof message !== 'undefined') { %>message: '<%= message %>',<% } %>
  timestamp: new Date().toISOString(),
  url: window.location.href
};
</script>

