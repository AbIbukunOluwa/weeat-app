}

.form-group input:focus {
  outline: none;
  border-color: var(--accent-yellow);
  box-shadow: 0 0 0 3px rgba(247,127,0,0.1);
}

.form-actions {
  margin-top: 25px;
}

.btn-primary {
  width: 100%;
  padding: 14px;
  background: var(--primary-red);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s;
}

.btn-primary:hover {
  background: #b91c1c;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(214,40,40,0.3);
}

.form-footer {
  text-align: center;
  margin-top: 25px;
  padding-top: 25px;
  border-top: 1px solid #e0e0e0;
}

.form-footer p {
  margin: 8px 0;
  color: #666;
}

.form-footer a {
  color: var(--accent-yellow);
  text-decoration: none;
  font-weight: 600;
}

.form-footer a:hover {
  color: var(--primary-red);
}

.forgot-link {
  font-size: 0.9em;
}

.test-accounts {
  background: #f8f9fa;
  border-radius: 12px;
  padding: 20px;
  margin-top: 30px;
}

.test-accounts h3 {
  color: var(--primary-red);
  margin-bottom: 15px;
  font-size: 1.1em;
  text-align: center;
}

.test-account-grid {
  display: grid;
  gap: 10px;
}

.test-account {
  background: white;
  padding: 12px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s;
  display: grid;
  grid-template-columns: 80px 1fr auto;
  align-items: center;
  gap: 10px;
  border: 2px solid transparent;
}

.test-account:hover {
  border-color: var(--accent-yellow);
  transform: translateX(5px);
}

.role-badge {
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.75em;
  font-weight: bold;
  text-transform: uppercase;
  text-align: center;
}

.role-badge.customer {
  background: #6c757d;
  color: white;
}

.role-badge.admin {
  background: #dc3545;
  color: white;
}

.test-account .email {
  font-size: 0.9em;
  color: #333;
  font-weight: 600;
}

.test-account .password {
  font-size: 0.85em;
  color: #999;
  font-family: monospace;
}

@media (max-width: 480px) {
  .auth-card {
    padding: 30px 20px;
  }
  
  .auth-header h1 {
    font-size: 1.5em;
  }
  
  .test-account {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 5px;
  }
}
</style>

<%- include('../partials/footer') %>
