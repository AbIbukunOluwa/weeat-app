<%- include('partials/header', { user: user, title: title }) %>

<div class="cart-container">
  <div class="cart-header">
    <h1>üõí Shopping Cart</h1>
    <a href="/menu" class="continue-shopping">‚Üê Continue Shopping</a>
  </div>

  <% if (cartItems.length === 0) { %>
    <div class="empty-cart">
      <div class="empty-cart-icon">üõí</div>
      <h2>Your cart is empty</h2>
      <p>Looks like you haven't added anything to your cart yet.</p>
      <a href="/menu" class="btn-primary">Browse Menu</a>
    </div>
  <% } else { %>
    <div class="cart-content">
      <div class="cart-items">
        <div class="cart-table">
          <div class="cart-header-row">
            <div class="col-item">Item</div>
            <div class="col-price">Price</div>
            <div class="col-quantity">Quantity</div>
            <div class="col-subtotal">Subtotal</div>
            <div class="col-action">Action</div>
          </div>
          
          <% cartItems.forEach(item => { %>
            <div class="cart-item-row">
              <div class="col-item">
                <div class="item-name"><%= item.foodName %></div>
              </div>
              <div class="col-price">
                $<%= item.price.toFixed(2) %>
              </div>
              <div class="col-quantity">
                <form method="POST" action="/cart/update" class="quantity-form">
                  <input type="hidden" name="id" value="<%= item.id %>">
                  <div class="quantity-wrapper">
                    <button type="button" onclick="decreaseQty(this)" class="qty-btn">‚àí</button>
                    <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="99" class="qty-input">
                    <button type="button" onclick="increaseQty(this)" class="qty-btn">+</button>
                  </div>
                  <button type="submit" class="update-btn">Update</button>
                </form>
              </div>
              <div class="col-subtotal">
                $<%= (item.price * item.quantity).toFixed(2) %>
              </div>
              <div class="col-action">
                <form method="POST" action="/cart/remove" class="remove-form">
                  <input type="hidden" name="id" value="<%= item.id %>">
                  <button type="submit" class="remove-btn" title="Remove item">üóëÔ∏è</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <div class="cart-summary">
        <h2>Order Summary</h2>
        <div class="summary-row">
          <span>Subtotal:</span>
          <span>$<%= total.toFixed(2) %></span>
        </div>
        <div class="summary-row">
          <span>Delivery:</span>
          <span>$4.99</span>
        </div>
        <div class="summary-row">
          <span>Tax (13%):</span>
          <span>$<%= (total * 0.13).toFixed(2) %></span>
        </div>
        <div class="summary-divider"></div>
        <div class="summary-row total">
          <span>Total:</span>
          <span>$<%= (total + 4.99 + (total * 0.13)).toFixed(2) %></span>
        </div>
        
        <form method="POST" action="/orders/create" class="checkout-form">
          <button type="submit" class="btn-checkout">
            Proceed to Checkout
          </button>
        </form>
        
        <div class="payment-methods">
          <p>We accept:</p>
          <div class="payment-icons">
            üí≥ üí∞ üì±
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<script>
function increaseQty(btn) {
  const input = btn.parentElement.querySelector('.qty-input');
  const newValue = Math.min(99, parseInt(input.value) + 1);
  input.value = newValue;
}

function decreaseQty(btn) {
  const input = btn.parentElement.querySelector('.qty-input');
  const newValue = Math.max(1, parseInt(input.value) - 1);
  input.value = newValue;
}
</script>

