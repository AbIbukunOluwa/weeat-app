<%- include('../partials/header', { title: title, user: user }) %>

<div class="user-details-container">
  <div class="user-details-header">
    <h1>üë§ User Details</h1>
    <a href="/admin/users" class="back-link">‚Üê Back to User Management</a>
  </div>

  <div class="user-details-card">
    <div class="user-info-section">
      <div class="user-avatar">
        <% if (targetUser.avatar) { %>
          <img src="<%= targetUser.avatar %>" alt="<%= targetUser.username %>" class="avatar-img">
        <% } else { %>
          <div class="avatar-placeholder">
            <%= targetUser.username.charAt(0).toUpperCase() %>
          </div>
        <% } %>
      </div>
      
      <div class="user-basic-info">
        <h2><%= targetUser.username %></h2>
        <p class="user-email"><%= targetUser.email %></p>
        <span class="role-badge <%= targetUser.role %>"><%= targetUser.role.toUpperCase() %></span>
      </div>
    </div>

    <div class="user-details-grid">
      <div class="detail-item">
        <span class="detail-label">User ID:</span>
        <span class="detail-value"><%= targetUser.id %></span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Full Name:</span>
        <span class="detail-value"><%= targetUser.name || 'Not provided' %></span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Email:</span>
        <span class="detail-value"><%= targetUser.email %></span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Role:</span>
        <span class="detail-value role-badge <%= targetUser.role %>"><%= targetUser.role %></span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Account Created:</span>
        <span class="detail-value"><%= new Date(targetUser.createdAt).toLocaleString() %></span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Last Updated:</span>
        <span class="detail-value"><%= new Date(targetUser.updatedAt).toLocaleString() %></span>
      </div>
    </div>

    <div class="user-actions">
      <button onclick="editUser(<%= targetUser.id %>)" class="action-btn edit">‚úèÔ∏è Edit User</button>
      <button onclick="resetPassword(<%= targetUser.id %>)" class="action-btn reset">üîë Reset Password</button>
      <button onclick="toggleRole(<%= targetUser.id %>)" class="action-btn role">üëë Change Role</button>
      <button onclick="deleteUser(<%= targetUser.id %>)" class="action-btn delete">üóëÔ∏è Delete User</button>
    </div>
  </div>
</div>

<style>
.user-details-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 30px 20px;
}

.user-details-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}

.user-details-header h1 {
  color: var(--primary-red);
  margin: 0;
}

.back-link {
  color: var(--accent-yellow);
  text-decoration: none;
  font-weight: 600;
}

.user-details-card {
  background: white;
  border-radius: 15px;
  padding: 30px;
  box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}

.user-info-section {
  display: flex;
  align-items: center;
  gap: 20px;
  margin-bottom: 30px;
  padding-bottom: 20px;
  border-bottom: 1px solid #e0e0e0;
}

.avatar-img {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-placeholder {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: var(--accent-yellow);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 2em;
  font-weight: bold;
}

.user-basic-info h2 {
  margin: 0 0 5px 0;
  color: var(--primary-red);
}

.user-email {
  color: #666;
  margin: 0 0 10px 0;
}

.role-badge {
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 0.85em;
  font-weight: bold;
}

.role-badge.admin {
  background: #dc3545;
  color: white;
}

.role-badge.staff {
  background: #28a745;
  color: white;
}

.role-badge.customer {
  background: #6c757d;
  color: white;
}

.user-details-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 15px;
  background: #f8f9fa;
  border-radius: 8px;
}

.detail-label {
  font-weight: 600;
  color: #333;
}

.detail-value {
  color: #555;
}

.user-actions {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
  justify-content: center;
}

.action-btn {
  padding: 10px 20px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.action-btn.edit {
  background: var(--accent-yellow);
  color: white;
}

.action-btn.reset {
  background: #17a2b8;
  color: white;
}

.action-btn.role {
  background: #6f42c1;
  color: white;
}

.action-btn.delete {
  background: #dc3545;
  color: white;
}

.action-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}
</style>

<script>
function editUser(userId) {
  // Implementation for editing user
  alert('Edit user functionality - redirect to edit form');
}

function resetPassword(userId) {
  if (confirm('Reset password for this user?')) {
    // Implementation for password reset
    alert('Password reset email sent');
  }
}

function toggleRole(userId) {
  const newRole = prompt('Enter new role (customer/staff/admin):');
  if (newRole && ['customer', 'staff', 'admin'].includes(newRole)) {
    // Implementation for role change
    alert(`Role changed to ${newRole}`);
  }
}

function deleteUser(userId) {
  if (confirm('Are you sure you want to delete this user? This cannot be undone.')) {
    // Implementation for user deletion
    alert('User deleted');
  }
}
</script>

<%- include('../partials/footer') %>
